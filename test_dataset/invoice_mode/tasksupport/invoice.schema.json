{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "nims-rdemagnetic-group/M012-1_spring8-synchrotron-magnetic-xrd",
    "description": "None",
    "type": "object",
    "required": [
        "custom",
        "sample"
    ],
    "properties": {
        "custom": {
            "type": "object",
            "label": {
                "ja": "固有情報",
                "en": "Custom Information"
            },
            "required": [],
            "properties": {
                "data_type": {
                    "label": {
                        "ja": "登録データ種別",
                        "en": "Data Type"
                    },
                    "type": "string",
                    "description": "登録するデータ種別を選択する。",
                    "default": "計測データ",
                    "enum": [
                        "計測データ",
                        "波長校正用XRDデータ",
                        "波長校正用試料情報",
                        "バックグラウンドデータ"
                    ]
                },
                "phase_reset": {
                    "label": {
                        "ja": "フェーズリセット",
                        "en": "Phase Reset"
                    },
                    "type": "string"
                },
                "anneal_temperature": {
                    "label": {
                        "ja": "アニール温度",
                        "en": "Anneal Temperature"
                    },
                    "type": "number",
                    "options": {
                        "unit": "C"
                    }
                },
                "measurement": {
                    "label": {
                        "ja": "測定手法",
                        "en": "Measurement"
                    },
                    "type": "string"
                },
                "wavelength": {
                    "label": {
                        "ja": "波長",
                        "en": "Wavelength"
                    },
                    "type": "number",
                    "options": {
                        "unit": "angstrom"
                    }
                },
                "zero_shift": {
                    "label": {
                        "ja": "回折角の原点ずれ",
                        "en": "Zero shift"
                    },
                    "type": "number",
                    "options": {
                        "unit": "degree"
                    }
                },
                "reference_data": {
                    "label": {
                        "ja": "参照データ",
                        "en": "Reference data"
                    },
                    "type": "string",
                    "description": "波長校正用XRDパターンデータ",
                    "options": {
                        "placeholder": {
                            "ja": "波長校正用XRDパターンのファイル名を記入",
                            "en": "Enter the filename of the wavelength calibration XRD pattern."
                        }
                    }
                },
                "background_capillary": {
                    "label": {
                        "ja": "バックグラウンドキャピラリ",
                        "en": "Background capillary"
                    },
                    "type": "string"
                },
                "diameter_of_the_background_capillary": {
                    "label": {
                        "ja": "バックグラウンドキャピラリ直径",
                        "en": "Diameter of the background capillary"
                    },
                    "type": "string"
                },
                "thickness_of_the_background_capillary": {
                    "label": {
                        "ja": "バックグラウンドキャピラリ厚さ",
                        "en": "Thickness of the background capillary"
                    },
                    "type": "string"
                },
                "x-axis_minimum_value": {
                    "label": {
                        "ja": "X軸の表示下限値",
                        "en": "X-axis minimum value"
                    },
                    "type": "number"
                },
                "x-axis_maximumvalue": {
                    "label": {
                        "ja": "X軸の表示上限値",
                        "en": "X-axis maximumvalue"
                    },
                    "type": "number"
                }
            }
        },
        "sample": {
            "type": "object",
            "label": {
                "ja": "試料情報",
                "en": "Sample Information"
            },
            "properties": {}
        }
    }
}