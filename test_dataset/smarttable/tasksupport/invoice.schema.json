{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://rde.nims.go.jp/rde/dataset-templates/invoice.schema.json",
    "description": "固有情報と試料情報のスキーマ",
    "type": "object",
    "required": [
        "custom",
        "sample"
    ],
    "properties": {
        "custom": {
            "type": "object",
            "label": {
                "ja": "固有情報",
                "en": "Specific Information"
            },
            "required": [],
            "properties": {
                "common_data_type": {
                    "label": {
                        "ja": "登録データタイプ",
                        "en": "Data Type"
                    },
                    "type": "string",
                    "default": "セグメンテーション"
                },
                "common_data_origin": {
                    "label": {
                        "ja": "データの起源",
                        "en": "Data Origin"
                    },
                    "type": "string",
                    "default": "experiments"
                },
                "common_technical_category": {
                    "label": {
                        "ja": "技術カテゴリー",
                        "en": "Technical Category"
                    },
                    "type": "string",
                    "default": "measurement"
                },
                "common_reference": {
                    "label": {
                        "ja": "参考文献",
                        "en": "Reference"
                    },
                    "type": "string"
                },
                "measurement_method_category": {
                    "label": {
                        "ja": "計測法カテゴリー",
                        "en": "Method category"
                    },
                    "type": "string",
                    "default": "その他"
                },
                "measurement_method_sub_category": {
                    "label": {
                        "ja": "計測法サブカテゴリー",
                        "en": "Method sub-category"
                    },
                    "type": "string",
                    "default": "画像処理"
                },
                "measurement_analysis_field": {
                    "label": {
                        "ja": "分析分野",
                        "en": "Analysis field"
                    },
                    "type": "string"
                },
                "measurement_measurement_environment": {
                    "label": {
                        "ja": "測定環境",
                        "en": "Measurement environment"
                    },
                    "type": "string"
                },
                "measurement_energy_level_transition_structure_etc_of_interest": {
                    "label": {
                        "ja": "対象準位_遷移_構造",
                        "en": "Energy Level_Transition_Structure etc. of interest"
                    },
                    "type": "string"
                },
                "measurement_measured_date": {
                    "label": {
                        "ja": "分析年月日",
                        "en": "Measured date"
                    },
                    "type": "string",
                    "format": "date"
                },
                "measurement_standardized_procedure": {
                    "label": {
                        "ja": "標準手順",
                        "en": "Standardized procedure"
                    },
                    "type": "string"
                },
                "measurement_instrumentation_site": {
                    "label": {
                        "ja": "装置設置場所",
                        "en": "Instrumentation site"
                    },
                    "type": "string"
                },
                "calculation_calculation_method": {
                    "type": "string",
                    "label": {
                        "ja": "計算方法",
                        "en": "Calculation method"
                    }
                },
                "calculation_supercom_or_pc": {
                    "type": "string",
                    "label": {
                        "ja": "SuperComまたはPC",
                        "en": "SuperCom or PC"
                    },
                    "default": "PC"
                },
                "calculation_os": {
                    "type": "string",
                    "label": {
                        "ja": "オペレーティングシステム",
                        "en": "OS"
                    }
                },
                "calculation_software_name": {
                    "type": "string",
                    "label": {
                        "ja": "ソフトウェア名称",
                        "en": "Software name"
                    },
                    "default": "ImageJ"
                },
                "calculation_software_version": {
                    "type": "string",
                    "label": {
                        "ja": "ソフトウェアバージョン",
                        "en": "Software version"
                    }
                },
                "calculation_software_reference": {
                    "type": "string",
                    "label": {
                        "ja": "ソフトウェア参照",
                        "en": "Software reference"
                    }
                },
                "calculation_operator": {
                    "type": "string",
                    "label": {
                        "ja": "計算実行者",
                        "en": "Operator"
                    }
                },
                "calculation_calculated_date": {
                    "type": "string",		
                    "label": {
                        "ja": "計算日",
                        "en": "Calculated date"
                    },
                    "format": "date"
                },
                "calculation_material_name": {
                    "type": "string",
                    "label": {
                        "ja": "物質名",
                        "en": "Material name"
                    }
                },
                "calculation_key_object": {
                    "type": "string",
                    "label": {
                        "ja": "キーの配列/計算される主な物性",
                        "en": "Key object"
                    }
                }
            }
        },
        "sample": {
            "type": "object",
            "label": {
                "ja": "試料情報",
                "en": "Sample Information"
            },
            "properties": {
                "generalAttributes": {
                    "type": "array",
                    "items": [
                        {
                            "type": "object",
                            "required": [
